
<%= render 'components/navbar' %>

<div class="container">
  <div id='map' style='width: 100%; height: 400px;'
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAP_API_KEY'] %>">
  </div>

    <div class="content">
      <div class="cards" style="padding: 5px;">
        <div class="row">
          <% @offerings.each do |offering| %>
            <div class="col-md-3">
              <img class="rounded" src="https://source.unsplash.com/random/?home&<%= rand(1...100) %>">
              <%= link_to offering_path(offering.id) do %>
                <div class="card-infos">
                  <div class="card-descr">
                    <h2><%= offering.title %></h2>
                    <p class= "description"><%= offering.description %></p>
                    <p class="price"><%= offering.price_per_night %> â‚¬</p>
                  </div>
                  <div class="card-rating">
                    <i class="fa-solid fa-star"></i> <%= offering.average_rating %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>

</div>


<%= render 'components/footer' %>
