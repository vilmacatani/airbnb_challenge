                <div class="card-infos">
                  <div class="card-descr">
                    <h2><%= offering.title %></h2>
                    <p class= "description"><%= offering.description %></p>
                    <p class="price"><%= offering.price_per_night %> â‚¬</p>
                  </div>
                  <div class="card-rating">
                    <i class="fa-solid fa-star"></i> <%= offering.average_rating %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>

